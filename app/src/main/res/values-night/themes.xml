<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- رنگ‌ها -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorSecondary">@color/dark_secondary</item>




        <item name="android:fontFamily">@font/iran_yekan_mobile_regular</item>
        <item name="android:layoutDirection">rtl</item>

        <!-- بک‌گراندها -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>

        <!-- متن -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- Error و Success -->
        <item name="colorError">@color/dark_error</item>
        <item name="colorOnPrimary">@color/dark_success</item>

        <!-- استاتوس بار -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

        <!-- RTL ساپورت -->
        <item name="android:supportsRtl">true</item>
    </style>

    <style name="RoundCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/rounded_check_box</item>
        <item name="android:buttonTint">@null</item>
    </style>

</resources>
